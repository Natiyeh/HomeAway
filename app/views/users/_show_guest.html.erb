<div>
  <h1 class="border-bottom profile"><%= @user.first_name.capitalize %>'s Profile</h1>
<div class="container">
  <div class="profile-container-guest sticky-top">
    <div class='profile-card card-padding'>
      <div class="profile-picture">
        <%= cl_image_tag @user.photo, class: 'avatar-large' %>
      </div>
      <div class='border-bottom card-padding'>
        <%= @user.first_name.capitalize %> <%= @user.last_name.capitalize %>
      </div>
      <div class='border-bottom card-padding'>
        <div>Joined in <b><%= @user.created_at.to_s.match(/^\d+/) %></b>
        </div>
      </div>
      <div class='border-bottom card-padding'>
        <div>
          <i class="fas fa-comment-alt"></i>
          <% review_count = 0 %>
          <% @user.homes.each do |home| %>
             <% review_count += home.reviews.all.count %>
          <% end %>
          <%= review_count %>
          Reviews
        </div>
        <div>
          <% total = 0 %>
          <% @user.homes.each do|home| %>
            <% home.reviews.each do |review| %>
              <% total += review.rating %>
            <% end %>
          <% end %>
          <% if total != 0 %>
            <i class="fas fa-star"></i> <%= total/review_count.to_f %> stars
          <% else %>
            <i class="fas fa-star"></i> <%= total %> Stars
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="about-me-container">
    <div>
      <h4 class="reviews border-bottom">Listings</h4>
    </div>
    <div class="three-listings overflow-auto">
      <div class="list-group list-group-horizontal">
        <% @user.homes.each do |home| %>
          <%= link_to home_path(home) do  %>
            <div class="card card-padding card-listing">
              <%= cl_image_tag home.photo, class: 'card-img-top rounded card-picture' %>
              <div class="card-body body">
                <p class="card-text text"><%= home.name %></p>
                <p style="color: black;"><%= home.address %></p>
              </div>
            </div>
          <% end %>
        <% end %>
      </div>
    </div>
    <div class="mx-auto heading">
      <h4 class="reviews border-bottom">Reviews</h4>
    </div>
    <div class="container review-container">
      <div class="row">
        <div class="col overflow-auto listings">
          <% @user.homes.each do|home| %>
            <% home.reviews.each do |review| %>
              <div class="list-group border-bottom review-list">
                <div class="d-flex w-100 justify-content-between">
                  <h5 class="mb-1">
                    <%= link_to user_path(review.user.id) do %>
                      <%= cl_image_tag(review.user.photo, class: "card-user avatar") %>
                    <% end %>
                    <%= review.user.first_name.capitalize %>
                  </h5>
                  <small>
                    <%= review.created_at.to_date.to_s(:long)  %>
                  </small>
                </div>
                <p class="mb-1">
                  "<%= review.content %>"
                </p>
                <small>
                  <i class="fas fa-star"></i> <%= review.rating %>
                </small>
                <br>
                <small>
                  <div class="d-flex w-100 justify-content-around home-name">
                    stayed at: <%= home.name %>
                    <%= link_to home_path(home) do  %>
                      <%= cl_image_tag home.photo, class: "square-avatar" %>
                    <% end %>
                  </div>
                </small>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
</div>
