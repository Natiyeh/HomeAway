<div class="container p-4">
  <div class="row">
    <div class="col">
      <h3 class="text-muted"><%= @home.home_type %></h3>
      <h2><%= @home.name %></h2>
      <p><%= @home.address %></p>
      <p><%= @home.bedroom %> Bedrooms</p>
      <p><i class="fas fa-user"></i> <%= @home.guest %> - <i class="fas fa-bed"></i> <%= @home.bed %> - <i class="fas fa-toilet"></i> <%= @home.bath %></p>
      <br>
      <br>
      <div
      class="rounded shadow"
      id="map"
      style="width: 220px;
      height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    </div>
    <div class="col">
      <%= cl_image_tag(@home.user.photo, alt: "avatar", class: "card-user avatar-bordered") %> <%= @home.user.email %>
      <%= cl_image_tag @home.photo, class: "img-thumbnail", style: "width: 530px; height: 400px;" %>
      </div>
    <div class="w-100"></div>
    <div class="col">
      <br>
      <p><%= @home.description %></p>
      <br>
      <h5>Reviews <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></h5>
        <% @home.reviews.each do |review| %>
          <p>"<%= review.content %>"</p>
          <p><%= review.rating %> <i class="fas fa-star"></i></p>
        <% end %>
    </div>
    <div class="col">
      <div class="create-form m-3" style="width: 30vw;">
        <span>
          <span style="font-size:24px; font-weight:bold;" >
            $<%= @home.rate %>
          </span>
          <span style="font-size:12px;">
            per night
          </span>
        </span>
        <%= simple_form_for [@home, @booking] do |f| %>
          <%= f.input :check_in %>
          <%= f.input :check_out %>
          <%= f.button :submit, 'Book this home', class: 'btn btn-primary'%>
        <% end %>
      </div>
    </div>
  </div>
</div>
