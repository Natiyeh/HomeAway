<div class="container p-4">
  <div class="row">
    <div class="col border-bottom">
      <h3 class="text-muted"><%= @home.home_type %></h3>
      <h2><%= @home.name %></h2>
      <p><%= @home.address %></p>
      <p><%= @home.bedroom %> Bedrooms</p>
      <p><i class="fas fa-user"></i> <%= @home.guest %> - <i class="fas fa-bed"></i> <%= @home.bed %> - <i class="fas fa-toilet"></i> <%= @home.bath %></p>
      <br>
      <br>
      <div
      class="rounded shadow"
      id="map"
      style="width: 220px;
      height: 200px;"
      data-markers="<%= @markers.to_json %>"
      data-mapbox-api-key="<%= ENV['MAPBOX_API_KEY'] %>"
    ></div>
    </div>
    <div class="col">
      <%= link_to user_path(@home.user.id) do %>
        <%= cl_image_tag(@home.user.photo, alt: "avatar", class: "card-user avatar") %> <%= @home.user.first_name.capitalize %>
      <% end %>
      <%= cl_image_tag @home.photo, class: "img-thumbnail", style: "width: 530px; height: 400px;" %>
    </div>
    <div class="w-100"></div>
    <div class="col">
      <br>
      <p class="border-bottom"><%= @home.description %></p>
      <br>
      <h5>Reviews <i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="fas fa-star"></i><i class="far fa-star"></i></h5>
        <% @home.reviews.each do |review| %>
          <p>"<%= review.content %>"</p>
          <p><%= review.rating %> <i class="fas fa-star"></i></p>
        <% end %>
    </div>
    <div class="col">
      <div class="create-form m-3" style="width: 30vw;">
        <p>$<%= @home.rate %> per night</p>
        <%= link_to 'edit listing', edit_home_path(@home)  %>
      </div>
    </div>
  </div>
</div>
