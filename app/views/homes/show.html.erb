<h2><%= @home.name %></h2>
<p><%= @home.address %></p>
<%= cl_image_tag @home.photo, height: 300, width: 400, crop: :fill %>
<%= link_to 'index', homes_path %>
<%= link_to "Delete", home_path(@home),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
<% if @home.user != current_user %>
  <%= render '/shared/booking_form' %>
<% end %>
