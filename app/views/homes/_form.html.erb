



      <%= simple_form_for [@home] do |f| %>
        <%= f.input :name, maxlength: 20, placeholder: 'Beautiful Downtown Location', opacity: 3%>
        <%= f.input :address, placeholder: '20 W 34th St, New York, NY 10001, USA'%>
        <%= f.input :photo %>
        <%= f.input :photo_cache, as: :hidden %>
        <%= f.button :submit, 'List this house', class: 'btn btn-primary'%>
      <% end %>
